<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:background="@drawable/settings_background" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/settings_toggle"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:textSize="20sp" />

    <ToggleButton
        android:id="@+id/toggle_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/minute"
        android:textOn="@string/hour"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:background="#d47019"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/blue"
        android:src="@drawable/settings"
        android:layout_margin="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/settings_radio"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:textSize="20sp" />
</LinearLayout>