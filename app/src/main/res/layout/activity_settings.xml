<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:background="#8ebc49" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/settings_toggle"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:textSize="20sp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/minute"
        android:textOn="@string/hour"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:background="#6b8e37"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/settings_radio"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/color_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:textSize="20sp" >
        <RadioButton
            android:id="@+id/radiobutton_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/red"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/radiobutton_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/green"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/radiobutton_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blue"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/radiobutton_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yellow"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/blue"
        android:src="@drawable/settings"
        android:layout_margin="20sp"/>
</LinearLayout>